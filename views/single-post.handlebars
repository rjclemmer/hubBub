<div class="post card text-white" style="background-color: rgb(95, 153, 211)">
  <article class="card">
    <div class="card-header d-flex justify-content-between">
      <h2>{{post.title}}</h2>
      <div>
        <small>Posted by {{post.User.username}} on {{format_date post.createdAt}}</small>
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div class="mb-3">
            <p class="mb-0">{{body}}</p>
            <p class="mb-0 text-muted">&mdash; {{User.username}}, {{format_date createdAt}}</p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="form-group">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-control"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>