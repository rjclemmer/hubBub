<div class="post card mt-3" style="background-color: rgb(95, 153, 211); padding: 20px;">
  <article class="card">
    <div class="card-header d-flex justify-content-between">
      <h2>{{post.title}}</h2>
      <div>
        <small>Posted by {{post.User.username}} on {{format_date post.createdAt}}</small>
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card mt-3">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card">
        <div class="row">
          {{#each post.Comments}}
            <div class="col-md-4 ">
              <div class="card mb-3">
                <div class="card-body border border-primary">
                  <p class="mb-0">{{body}}</p>
                  <p class="mb-0 text-muted text-white">&mdash; {{User.username}}, {{format_date createdAt}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card mt-3">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body mb-3"> 
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="form-group">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-control"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
