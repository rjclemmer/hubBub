<div class="card text-white" style="background-color: rgb(95, 153, 211)">
        <div class="card-header">
          <h2>Edit Post</h2>
        </div>
        <form id="edit-post-form" class="card-body ">
          <input type="hidden" name="post-id" value="{{post.id}}" />
      
          <div class="form-group d-flex row justify-content-center">
            <label class="form-label" for="post-title">Title</label>
            <input type="text" name="post-title" value="{{post.title}}" class="form-control" />
          </div>
      
          <div class="form-group d-flex row justify-content-center">
            <label class="form-label" for="post-body">Content</label>
            <textarea name="post-body" class="form-control">{{post.body}}</textarea>
          </div>
          
          <div class="mt-5">
            <button type="submit" class="btn btn-light">Update</button>
      
            <button type="button" id="delete-btn" class="btn btn-danger">Delete</button></div>
          
        </form>
      </div>
                            
      <script src="/js/edit.js"></script>